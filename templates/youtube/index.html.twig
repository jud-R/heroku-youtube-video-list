{% extends 'base.html.twig' %}

{% block title %}Vidéos Youtube Favorites !{% endblock %}

{% block body %}

    <h2>Toutes vos vidéos</h2>
    <div class="row row-cols-1 row-cols-md-2 g-4">
        {% for video in videos %}
            <div class="col">
                <div class="card shadow p-3 mb-5 bg-white rounded">
                    <img src="{{ video.url|youtube_thumbnail }}" class="card-img-top" alt="{{ video.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ video.name }}</h5>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>


<div>

{{ form_start(form) }}
    {{ form_row(form.url,       {'attr': {'class': 'mb-2'}}) }}
    {{ form_row(form.name,      {'attr': {'class': 'mb-2'}}) }}
    {{ form_row(form.envoyer,   {'attr': {'class': 'mt-3 btn-primary'}}) }}
{{ form_end(form) }}
</div>

